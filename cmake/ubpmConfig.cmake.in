cmake_minimum_required(VERSION 3.15)

if(NOT DEFINED CACHE{UBPM_REAL_LOCATION})
  get_filename_component(
      UBPM_REAL_LOCATION
      "${CMAKE_CURRENT_LIST_DIR}/module"
      REALPATH CACHE
  )
  set_property(CACHE UBPM_REAL_LOCATION PROPERTY TYPE FILEPATH)
  mark_as_advanced(UBPM_REAL_LOCATION)
endif()

if(NOT UBPM_REAL_LOCATION IN_LIST CMAKE_MODULE_PATH)
  list(APPEND CMAKE_MODULE_PATH "${UBPM_REAL_LOCATION}")
endif()
